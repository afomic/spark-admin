<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_margin="8dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:padding="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:padding="4dp"
                android:id="@+id/imv_post_icon"
                android:src="@drawable/sample"
                android:layout_marginRight="8dp"
                android:layout_width="32dp"
                android:layout_height="32dp"/>
            <TextView
                android:textStyle="bold"
                android:id="@+id/tv_poster_name"
                android:textSize="16sp"
                android:layout_toRightOf="@id/imv_post_icon"
                android:text="President"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_toRightOf="@id/imv_post_icon"
                android:layout_below="@id/tv_poster_name"
                android:id="@+id/tv_post_time"
                android:text="12 hrs ago"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>
        <ImageView
            android:src="@drawable/image"
            android:scaleType="centerCrop"
            android:id="@+id/imv_blog_picture"
            android:layout_width="match_parent"
            android:layout_height="160dp"/>
        <TextView
            android:padding="8dp"
            android:textStyle="bold"
            android:id="@+id/tv_blog_title"
            android:text="How to make a CGPA of 5.0"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:id="@+id/tv_blog_description"
            android:paddingBottom="4dp"
            android:text="Graduating w th djcjsdbfc buvhbsjhbfcns csbhfucjbshnfc sn c..."
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</android.support.v7.widget.CardView>