<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        app:cardCornerRadius="@dimen/card_album_radius">
        <RelativeLayout
            android:id="@+id/person_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:id="@+id/background_view"
                android:layout_height="68dp"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:src="@drawable/image"
                android:id="@+id/iv_person_image"
                android:layout_margin="16dp"
                app:civ_border_width="2dp"
                app:civ_border_color="#FFF"
                android:layout_centerHorizontal="true"
                android:layout_width="100dp"
                android:layout_height="100dp" />
            <TextView
                android:text="DR Afolabi"
                android:id="@+id/tv_person_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_person_image"
                android:paddingLeft="@dimen/album_title_padding"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                android:paddingRight="@dimen/album_title_padding"
                android:textSize="16sp" />

            <TextView
                android:text="Room 201"
                android:id="@+id/tv_person_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_person_name"
                android:paddingBottom="@dimen/songs_count_padding_bottom"
                android:paddingLeft="@dimen/album_title_padding"
                android:gravity="center_horizontal"
                android:paddingRight="@dimen/album_title_padding"
                android:textSize="@dimen/songs_count" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>