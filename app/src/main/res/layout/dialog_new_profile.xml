<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <TextView
        android:text="Select the type of Profile Created"
        android:layout_width="match_parent"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"/>
    <Button
        android:text="Executives"
        android:layout_margin="8dp"
        android:layout_width="250dp"
        android:id="@+id/btn_add_executives"
        android:layout_height="wrap_content"/>
    <Button
        android:text="Parliamentarians"
        android:layout_margin="8dp"
        android:layout_width="250dp"
        android:id="@+id/btn_add_parliamentarian"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_margin="8dp"
        android:id="@+id/btn_add_lecturers"
        android:text="Lecturers"
        android:layout_width="250dp"
        android:layout_height="wrap_content"/>


</LinearLayout>