<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_margin="8dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:padding="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:padding="4dp"
                android:id="@+id/imv_post_icon"
                android:src="@drawable/sample"
                android:layout_marginRight="8dp"
                android:layout_width="32dp"
                android:layout_height="32dp"/>
            <TextView
                android:textStyle="bold"
                android:id="@+id/tv_poster_name"
                android:textSize="16sp"
                android:layout_toRightOf="@id/imv_post_icon"
                android:text="President"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_toRightOf="@id/imv_post_icon"
                android:layout_below="@id/tv_poster_name"
                android:id="@+id/tv_post_time"
                android:text="12 hrs ago"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:id="@+id/imv_file_icon"
            android:background="#7440c4ff"
            android:padding="40dp"
            android:src="@drawable/pdf_logo"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:padding="8dp"
            android:layout_height="wrap_content">
            <TextView
                android:text="Intrroduction to Chemistry.pdf"
                android:layout_width="0dp"
                android:textSize="18sp"
                android:padding="4dp"
                android:textStyle="bold"
                android:id="@+id/tv_file_name"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <ImageView
                android:padding="4dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_file_download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>